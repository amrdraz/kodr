
{{#if session.isAuthenticated}}
  {{#link-to 'challenges.create' class="btn btn-primary pull-right create-challenge" }} <i class="glyphicon glyphicon-plus"></i> Create Challenge{{/link-to}}
{{/if}}

<h3>Challenges</h3>

<ul class="list-group">
{{#each model as |challenge| }}
    <li class="list-group-item">            
        <span class="pull-right label label-info">awards {{challenge.exp}} Exp</span>
        <h4 class="list-group-item-heading">
            {{#link-to 'challenge' challenge class="challenge-name"}}
                {{challenge.name}}
            {{/link-to}}
        </h4>
        <section class="list-group-item-text">
            <div>
                <a class='challenge-discussion' href="#"><i class="glyphicon glyphicon-comment"></i> Discussion</a>
                {{#link-to 'challenge.edit' challenge class=":challenge-edit"}}
                    <i class="glyphicon glyphicon-pencil"></i> Edit
                {{/link-to}}
                {{#link-to 'challenge.try' challenge class=":challenge-try"}}
                    <i class="glyphicon glyphicon-play"></i> Try
                {{/link-to}}
            </div>
            <div>
                <span class="label label-default"><i class="glyphicon glyphicon-tags"></i> Tags</span>
            </div>
        </section>
    </li>
    {{else}}
    <p>No Challanges set yet</p>
{{/each}}
</ul>