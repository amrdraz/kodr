<div class="container">
  <div class="page-header">
    <h3>Sign in</h3>
  </div>
  <div class="col-sm-8 col-sm-offset-2">

    {{#if errorMessage}}
      <div class="alert alert-danger">
      {{errorMessage.message}}
      {{#if errorMessage.id }}
        if you still did not recieve any email in you inbox we can <a {{action "verify" errorMessage.id }} href="#verify">resend verifcation to {{errorMessage.email}}</a>
      {{/if}}
      </div>
    {{/if}}
    {{#if fullErrors }}
      <div class="alert alert-danger">
        {{#each fullErrors as |message| }}
          <p>{{message}}</p>
        {{/each}}
      </div>
    {{/if}}

    <form {{action "validate" on="submit"}}>
      <div class="form-group text-center">
        
      </div>
      <div class="form-group">
        <label for="identification" class="control-label">Username or Email</label>
        {{input type="text" class="form-control" id="identification" value=identification autofocus="autofocus"}}
      </div>
      <div class="form-group">
        <label for="password" class="control-label">Password</label>
        {{input type="password" class="form-control" id="password" value=password}}
      </div>
      <button type="submit" class="submit btn btn-primary"><i class="fa fa-unlock-alt"></i> Sign in</button>
      or {{#link-to 'signup' class="btn"}}Sign Up{{/link-to}}
      <br>
      {{#link-to 'forgotpass'}}Did you forget your password?{{/link-to}}
    </form>
  </div>
</div>
