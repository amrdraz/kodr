
<ul class="list-group">
{{#each model as |challenge| }}
    <li class="list-group-item">            
        <span class="pull-right">
            {{#if challenge.isPublished}}
                <span class="label label-success"><i class="glyphicon glyphicon-ok"></i> Published</span>
            {{else}}
                <span class="label label-default">Un-Published</span>
            {{/if}}
            <span class="label label-info">awards {{challenge.exp}} Exp</span>
        </span>

        <h4 class="list-group-item-heading">
            {{#link-to 'challenge' challenge class=".challenge-name"}}
                {{challenge.name}}
            {{/link-to}}
        </h4>
        <section class="list-group-item-text">
            <div>
               {{!--  <a class='challenge-discussion' href="#"><i class="glyphicon glyphicon-comment"></i> Discussion</a> --}}

                {{#link-to 'challenge.edit' challenge class=":challenge-edit"}}
                    <i class="glyphicon glyphicon-pencil"></i> Edit
                {{/link-to}}
                {{#link-to 'challenge.try' challenge class=":challenge-try"}}
                    <i class="glyphicon glyphicon-play"></i> Try
                {{/link-to}}
                <a {{action "removeChallenge" challenge }} href="#" class="challenge-remove">
                    <i class="glyphicon glyphicon-remove"></i> Remove 
                </a>
            </div>
            <div>
                <span class="label label-default"><i class="glyphicon glyphicon-tags"></i> Tags</span>
            </div>
        </section>
    </li>
    {{else}}
    <p>No Challanges set yet</p>
{{/each}}
</ul>